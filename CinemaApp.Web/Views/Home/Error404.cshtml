@{
    Layout = null; // Ensures the view doesn't use a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        }
        .content {
            display: none;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }
        .btn-hover-effect {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .btn-hover-effect:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="text-center content">
        <h1 class="display-1 fw-bold text-danger">404</h1>
        <p class="lead text-muted">Oops! The page you're looking for doesn't exist.</p>
        <p class="mb-4">It seems you may have taken a wrong turn. Don't worry, it happens to the best of us!</p>
        <a href="/" class="btn btn-primary btn-lg btn-hover-effect">
            <i class="bi bi-arrow-left-circle"></i> Back to Home
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Fade-in effect for the content
            const content = document.querySelector(".content");
            setTimeout(() => {
                content.style.display = "block";
                content.style.opacity = 1;
            }, 300);

            // Add subtle animation for the back button
            const button = document.querySelector(".btn-hover-effect");
            button.addEventListener("mouseover", () => {
                button.classList.add("btn-hovered");
            });
            button.addEventListener("mouseout", () => {
                button.classList.remove("btn-hovered");
            });
        });
    </script>
</body>
</html>