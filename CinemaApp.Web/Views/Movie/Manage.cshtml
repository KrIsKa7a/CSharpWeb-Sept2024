@using CinemaApp.Services.Data.Interfaces
@using CinemaApp.Web.ViewModels.Movie
@model IEnumerable<AllMoviesIndexViewModel>

@{
    ViewData["Title"] = "Manage Movies";
}

<h2 class="my-4 text-center">Manage Movies</h2>

<div class="d-flex justify-content-end mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Movie
    </a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Release Date</th>
            <th scope="col">Duration</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AllMoviesIndexViewModel movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseDate</td>
                <td>@movie.Duration minutes</td>
                <td class="text-center">
                    <a asp-action="AddToProgram" asp-route-id="@movie.Id" class="btn btn-info btn-sm me-2">
                        <i class="bi bi-calendar-plus"></i> Add to Program
                    </a>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
