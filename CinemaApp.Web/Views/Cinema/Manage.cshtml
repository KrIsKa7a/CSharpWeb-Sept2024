@using CinemaApp.Web.ViewModels.Cinema
@model IEnumerable<CinemaIndexViewModel>

@{
    ViewData["Title"] = "Manage Cinemas";
}

<h2>Manage Cinemas</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Add New Cinema</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cinema in Model)
    {
        <tr>
            <td>@cinema.Name</td>
            <td>@cinema.Location</td>
            <td>
                <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>